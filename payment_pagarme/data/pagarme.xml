<odoo>
    <record id="payment_acquirer_pagarme" model="payment.acquirer">
        <field name="name">PagarMe</field>
        <field name="provider">pagarme</field>
        <field name="image_128" type="base64" file="payment_pagarme/static/src/img/pagarme-icon.png"/>
        <field name="company_id" ref="base.main_company"/>
        <field name="view_template_id" ref="pagarme_button"/>
        <field name="pre_msg">
            <![CDATA[ <p>Você vai ser redirecionado ao PagarMe para pagamento.</p> ]]>
        </field>
        <field name="description" type="html">
            <p>
                O melhor meio de pagamento para você vender online
            </p>
            <ul class="list-inline">
                <li><i class="fa fa-check"/>eCommerce</li>
                <li><i class="fa fa-check"/>Botão de pagamento em cotações online</li>
            </ul>
        </field>
    </record>
</odoo>
